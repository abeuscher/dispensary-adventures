{% macro blogthumb(post) %}
    <a class="blog-thumb" href="{{ post.permalink }}">
        <article class="inner">
            <div class="thumb"><img src="{{ post.seo.fields.featured_image.fields.file.url }}?w=346&h=260&fm=webp" alt=""/></div>
            <div class="content">
                <h2>{{ post.title }}</h2>
            </div>
            <div class="post-date">{{ post.date | date('MM/DD/YYYY') }}</div>
        </article>
    </a>
{% endmacro %}